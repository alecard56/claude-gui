{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "jsx": "react-jsx",
      "esModuleInterop": true,
      "allowJs": true,
      "strict": false,
      "noImplicitAny": false,
      "typeRoots": ["./node_modules/@types", "./src/types"]
    },
    "include": ["src/**/*.ts", "src/**/*.tsx", "src/test/**/*.ts", "src/test/**/*.tsx"],
    "exclude": ["node_modules", "dist"]
  }